// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ServiceRequest {
  id                String   @id @default(cuid())
  serviceNumber     String   @unique
  status            ServiceStatus @default(PENDING)

  // Device Information
  deviceType        String?
  serviceType       String?
  issueDescription  String?  @db.Text

  // Customer Information (minimal for privacy)
  customerEmail     String?
  customerName      String?

  // Shipping (stored as JSON for flexibility)
  shippingAddress   Json?

  // Payment Information
  paymentAmount     Decimal? @db.Decimal(10, 2)
  paymentStatus     String?  @default("unpaid")
  stripePaymentId   String?  @unique

  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  completedAt       DateTime?

  // Optional: Link to user account if they create one later
  userId            String?
  user              User?    @relation(fields: [userId], references: [id])

  @@map("service_requests")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Link to service requests
  serviceRequests ServiceRequest[]

  @@map("users")
}

enum ServiceStatus {
  PENDING    // Form submitted, waiting for payment
  PAID       // Payment received, preparing shipping label
  SHIPPED    // Device shipped to customer
  RECEIVED   // Device received at repair facility
  REPAIRING  // Currently being repaired
  COMPLETED  // Repair completed, ready for pickup/shipping
  CANCELLED  // Request cancelled
}
